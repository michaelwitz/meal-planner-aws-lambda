# Environment Configuration
ENVIRONMENT=development

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# VPC Configuration (set after infrastructure creation)
VPC_ID=
LAMBDA_SECURITY_GROUP_ID=
RDS_SECURITY_GROUP_ID=
PRIVATE_SUBNET_1A=
PRIVATE_SUBNET_1B=
PUBLIC_SUBNET_1A=

# Database Configuration
# For local development with cloud RDS (direct connection)
DB_HOST=your-rds-cluster-endpoint.rds.amazonaws.com
DB_PORT=5432
DB_NAME=mealplanner
DB_USER=mealplanner
DB_PASSWORD=your-secure-password

# RDS Proxy endpoint (for Lambda connections)
RDS_PROXY_ENDPOINT=your-rds-proxy-endpoint.proxy-xxxxx.us-east-1.rds.amazonaws.com

# For local development with local PostgreSQL
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=5432
LOCAL_DB_NAME=mealplanner_dev
LOCAL_DB_USER=postgres
LOCAL_DB_PASSWORD=postgres

# Use local database (true) or cloud database (false)
USE_LOCAL_DB=true

# Secrets (for local development)
JWT_SECRET_KEY=your-jwt-secret-key-for-local-dev
FLASK_SECRET_KEY=your-flask-secret-key-for-local-dev
JWT_ACCESS_TOKEN_EXPIRES=86400

# AWS Secrets Manager ARNs (set after secrets creation)
SECRET_ARN_DB=arn:aws:secretsmanager:us-east-1:xxxx:secret:meal-planner/rds/credentials-xxxxx
SECRET_ARN_JWT=arn:aws:secretsmanager:us-east-1:xxxx:secret:meal-planner/jwt/secret-xxxxx
SECRET_ARN_FLASK=arn:aws:secretsmanager:us-east-1:xxxx:secret:meal-planner/flask/secret-xxxxx

# Database ARNs
DB_CLUSTER_ARN=arn:aws:rds:us-east-1:xxxx:cluster:meal-planner-cluster

# API Configuration
API_PREFIX=/api

# Logging
LOG_LEVEL=DEBUG
SQLALCHEMY_ECHO=false

# Local Development
IS_LOCAL=true
LOCAL_PORT=5000

# Serverless Configuration
SERVERLESS_STAGE=dev
LAMBDA_FUNCTION_NAME=meal-planner-dev-app
DB_INIT_FUNCTION_NAME=meal-planner-dev-dbInit
